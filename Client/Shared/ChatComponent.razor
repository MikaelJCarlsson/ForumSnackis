                        <AuthorizeView Context="authContext">
                            <Authorized>
<div class="container">
    <div class="row">
        <div class="col-4 p-0">
            <div class="card" style="height: 428px;">
                <div class="card-header">Contacts</div>
                <div class="card-body p-1 mb-1 d-flex flex-column overflow-auto" style=" height:214px; background-color: indianred">
                    @if (Users != null)
                    {
                        @foreach (var u in Users)
                        {
                            <a @onclick="() => OpenChat(u.UserId)" class="mb-1">@u.UserName</a>
                        }
                    }
                </div>
                <div class="card-body p-1 mb-1 d-flex flex-column overflow-auto" style="background-color: skyblue">
                    <div>
                        <p class="mb-0">Chat1</p>
                        <small class="text-muted mb-0">Janne, Roger, Kenny</small>
                    </div>
                    <div>
                        <p class="mb-0">Chat3</p>
                        <small class="text-muted mb-0">Janne, Kent, Bengt</small>
                    </div>
                    <div>
                        <p class="mb-0">Chat4</p>
                        <small class="text-muted mb-0">Janne, Roger</small>
                    </div>
                    <div>
                        <p class="mb-0">Chat2</p>
                        <small class="text-muted mb-0">Kent, Bengt</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-8 p-0">
            <div class="card" style="width: 24rem;">
                <div class="card-header">name</div>
                <div class="card-body d-flex flex-column overflow-auto" style="height: 300px; background-color: #d3d3d3;">
                    @if (CurrentChat?.Messages != null)
                    {
                                <Virtualize Items="@CurrentChat.Messages" Context="message">
                                    <ChatMessageComponent Message="message" CurrentUserId="authContext.CurrentUserId">
                                    </ChatMessageComponent>
                                </Virtualize>
                    }

                </div>
                <EditForm Model="MessageModelModel" OnSubmit="SendMessage" class="card-footer d-flex flex-nowrap">
                    <InputTextArea @bind-Value="MessageModelModel.Message" class="flex-fill"></InputTextArea>
                    <button class="btn btn-primary btn-sm" type="submit">Submit</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>
                            </authorized>
                        </AuthorizeView>
